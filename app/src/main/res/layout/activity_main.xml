<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/topBlock"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

        <TextView
                android:text="Guessing Game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>
        <TextView
                android:text="Game rules: press the button for a larger number, and you will earn a point, if you get it wrong, you lose a point. Earn 5 points to win the game!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/layout2"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        <Button
                android:text="0"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/left_Button"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="20dp"/>

        <Button
                android:text="0"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/right_Button"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="20dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/bottomBlock"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        <TextView
                android:text="Points:0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textResult"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>
    </LinearLayout>

</RelativeLayout>